{
  "extends": ["next/core-web-vitals", "next/typescript"],
  "plugins": ["@typescript-eslint", "unused-imports"],
  "rules": {
    /* ❌ Error on unused imports */
    "unused-imports/no-unused-imports": "error",

    /* ❌ Error on unused variables (including state) */
    "@typescript-eslint/no-unused-vars": [
      "error",
      {
        "vars": "all",
        "args": "after-used",
        "ignoreRestSiblings": false,
        "argsIgnorePattern": "^_",
        "varsIgnorePattern": "^_"
      }
    ],

    /* Prevent false positives from base rule */
    "no-unused-vars": "off",

    /* ❌ Error on files longer than 200 lines (excluding blanks/comments) */
    "max-lines": [
      "error",
      {
        "max": 200,
        "skipBlankLines": true,
        "skipComments": true
      }
    ]
  }
}
